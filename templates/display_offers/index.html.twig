{% extends 'base.html.twig' %}

{% block title %}Hello DisplayOffersController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .title{
    color: red; 
    font-size: 30px;
    letter-spacing: 1px;
}
</style>

<div class="example-wrapper">
    <h1>Hello, here is the {{ controller_name }} page !</h1>

    <ul>
    {% if offers %}
        {% for element in offers %}
            <li>{{element}}</li>
        {% endfor %}
	{% else %}
		<li> There is no offers for the moment. </li>
	{% endif %}
        
    </ul>
</div>
{% endblock %}
